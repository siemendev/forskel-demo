<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        {% if model.headline is not empty %}
            <h1 class="display-4 font-weight-normal">{{ model.headline }}</h1>
        {% endif %}
        {% if model.text is not empty %}
            <p class="lead font-weight-normal">{{ model.text|raw }}</p>
        {% endif %}
    </div>
    {% if model.image is not empty %}
        {{ forskel_render(model.image) }}
    {% endif %}
</div>